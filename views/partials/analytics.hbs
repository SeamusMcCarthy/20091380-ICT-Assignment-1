<section class="ui segment">
    <div class="ui five small statistics">
        <div class="ui statistic">
            <div class="value">
                <i class="user icon"></i>
            </div>
            <div class="label">
                {{name}}
            </div>
        </div>
        <div class="ui statistic">
            <div class="value">
                <i class="weight icon"></i> {{ latestweight }}
            </div>
            <div class="label">
                Latest Weight
            </div>
        </div>
        <div class="ui statistic">
            <div class="value">
            {{#if isidealbodyweight}}
                <i class="green dashboard icon"></i>
            {{else}}
                <i class="red dashboard icon"></i>
            {{/if}}
            </div>
            <div class="label">
                Ideal Weight Indicator
            </div>
        </div>
        <div class="ui statistic">
            <div class="value">
                <i class="heartbeat icon"></i> {{BMI}}
            </div>
            <div class="label">
                BMI
            </div>
        </div>
        <div class="ui statistic">
            <div class="value">
                <i class="doctor icon"></i>
            </div>
            <div class="label">
                {{BMICategory}}
            </div>
        </div>
    </div>
</section>