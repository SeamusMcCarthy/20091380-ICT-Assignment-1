<form class="ui segment form" action="/dashboard/addgoal/{{memberid}}" method="POST">
    {{id}}
    <div class="two fields">
        <div class="field">
            <label>Target Date</label>
            <div class="ui input left icon">
                <i class="calendar icon"></i>
                <input type="text" placeholder="Date" name="date" id="datepicker" required>
            </div>
        </div>
        <div class="field">
            <label>Target Weight</label>
            <input placeholder="00.00kg" type="number" min="35.00" max="250.00" step="0.1" name="weight" required>
        </div>
    </div>
    <button class="ui blue submit button"> Add Goal </button>
</form>