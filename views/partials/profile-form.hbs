<div class="column">
    <form class="ui segment form column" action="/updatemember" method="POST">
        <h3 class="ui header"> Update Member Details </h3>
        <div class="two fields">
            <div class="field">
                <label>Name</label>
                <input value="{{member.name}}" type="text" name="name" required>
            </div>
            <div class="field">
                <label for="gender">Gender</label>
                <select name="gender" id="gender" required>
                    {{{checkGender member.gender}}}
                </select>
            </div>
        </div>
        <div class="field">
            <label>Email</label>
            <input value="{{member.email}}" type="email" name="email" required>
        </div>
        <div class="field">
            <label>Password</label>
            <input value="{{member.password}}" type="text" name="password" required>
        </div>
        <div class="field">
            <label>Address</label>
            <input value="{{member.address}}" type="text" name="address" required>
        </div>

        <div class="two fields">
            <div class="field">
                <label>Height</label>
                <input value="{{member.height}}" type="number" min="1.00" max="3.00" step="0.01" name="height" required>
            </div>
            <div class="field">
                <label>Weight</label>
                <input value="{{member.startingweight}}" type="number" min="35.00" max="250" step="0.01" name="startingweight" required>
            </div>
        </div>
        <button class="ui blue submit button"> Update </button>
    </form>
</div>
